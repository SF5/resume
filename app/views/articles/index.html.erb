<h1>Articles</h1>

<% provide(:title, 'Article') %>
<% @articles.each do |article| %>
<div class="panel panel-default">
	<div class="panel-body">
		<h3><%= article.title %></h3>
		<p>
			<strong>Created at:</strong>
			<%= article.created_at %>
		</p>
		<p>
			<%= article.content %>
		<p>
		<p>
			<a href="<%= article.link %>"><%= image_tag article.image_url(:thumb) if article.image? %></a>
		</p>
		<% if admin_signed_in? %>
		<%= link_to 'Edit', edit_article_path(article) %>
		|
		<%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %><% end %>
		</p>
	</div>
</div>
<% end %>

<br>
<% if admin_signed_in? %>
<%= link_to new_article_path, class: 'btn btn-success' do %>
<i class="glyphicon glyphicon-plus"></i> New article
<% end %>
<% end %>