<h1>Studies</h1>

<table class="table table-responsive">
	<thead>
		<tr>
			<th>Courses</th>
			<th>Years</th>
			<th>Institute</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @studies.each do |study| %>
		<tr>
			<td><%= study.course %></td>
			<td><%= study.years %></td>
			<td><%= study.institute %></td>
			<td><%= link_to 'Show', study %></td>
			<% if admin_signed_in? %>
			<td><%= link_to 'Edit', edit_study_path(study) %></td>
			<td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
		</tr>
		<% end %>
	</tbody>
</table>

<br>
<% if admin_signed_in? %>
<%= link_to new_study_path, class: 'btn btn-success' do %>
<i class="glyphicon glyphicon-plus"></i> New Study
<% end %>
<% end %>